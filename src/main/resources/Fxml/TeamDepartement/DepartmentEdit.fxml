<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.pidevrh.teams_departements.DepartmentEditController">

    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
        <Label text="Modifier Département" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="Nom:" />
        <TextField fx:id="editNameField" promptText="Nom du département" />

        <Label text="Description:" />
        <TextField fx:id="editDescriptionField" promptText="Description" />

        <HBox spacing="10">
            <Button text="Annuler" fx:id="cancelButton" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            <Button text="Enregistrer" fx:id="saveButton" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</AnchorPane>


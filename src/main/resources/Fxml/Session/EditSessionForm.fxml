<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="10" style="-fx-padding: 20;" fx:controller="esprit.tn.pidevrh.session.SessionUpdateController">
    <Label text="Modifier la Session" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Session Type (Radio Buttons) -->
    <HBox spacing="10">
        <Label text="Type de Session :" />
        <RadioButton fx:id="presentielRadio" text="Présentielle" toggleGroup="$sessionTypeGroup" onAction="#handleSessionTypeChange" />
        <RadioButton fx:id="onlineRadio" text="En ligne" toggleGroup="$sessionTypeGroup" onAction="#handleSessionTypeChange" />
    </HBox>

    <!-- Salle Field (Label + TextField) -->
    <HBox fx:id="salleHBox" spacing="10" visible="false">
        <Label fx:id="salleLabel" text="Salle" />
        <TextField fx:id="salleField" promptText="Salle de la session" />
    </HBox>

    <!-- Date Field (Label + DatePicker) -->
    <HBox fx:id="dateHBox" spacing="10" visible="false">
        <Label fx:id="dateLabel" text="Date" />
        <DatePicker fx:id="datePicker" promptText="Sélectionner la date" />
    </HBox>

    <!-- Buttons -->
    <HBox spacing="10">
        <!-- Save Button -->
        <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>

        <!-- Cancel Button -->
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #ff0000; -fx-text-fill: white;" />
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="10" style="-fx-padding: 20;" fx:controller="esprit.tn.pidevrh.session.SessionUpdateController">
    <Label text="Modifier la Session" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Session Type (Radio Buttons) -->
    <HBox spacing="10">
        <Label text="Type de Session :" />
        <RadioButton fx:id="presentielRadio" text="Présentiel" toggleGroup="$sessionTypeGroup" onAction="#handleSessionTypeChange" />
        <RadioButton fx:id="onlineRadio" text="En ligne" toggleGroup="$sessionTypeGroup" onAction="#handleSessionTypeChange" />
    </HBox>

    <!-- Salle Field (Visible for Présentiel) -->
    <TextField fx:id="salleField" promptText="Salle de la session" visible="false" />

    <!-- Link Field (Visible for Online) -->
    <TextField fx:id="linkField" promptText="Lien de la session" visible="false" />

    <!-- Date Field -->
    <DatePicker fx:id="datePicker" promptText="Sélectionner la date" />

    <!-- Buttons -->
    <HBox spacing="10">
        <!-- Save Button -->
        <Button text="Enregistrer" onAction="#handleSave" />

        <!-- Cancel Button -->
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #ff0000; -fx-text-fill: white;" />
    </HBox>
</VBox>
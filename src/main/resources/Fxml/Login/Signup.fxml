                <Label text="Welcome To My App" textFill="WHITE">
                    <font>
                        <Font name="Tahoma" size="34.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets top="-30.0" />
            </padding>
        </VBox>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" prefWidth="400" prefHeight="500" fx:controller="esprit.tn.pidevrh.quiz.AssignUserModalController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;">

    <!-- Titre -->
    <Label text="SÃ©lectionnez un utilisateur" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Champ de recherche -->
    <TextField fx:id="searchField" promptText="Rechercher un utilisateur..."
               style="-fx-font-size: 14px; -fx-padding: 8px; -fx-border-radius: 5px;"/>

    <!-- Liste des utilisateurs -->
    <ListView fx:id="usersListView" style="-fx-background-color: white; -fx-border-radius: 5px;"/>

    <!-- Boutons -->

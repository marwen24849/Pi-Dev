<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.pidevrh.chat.ChatController" stylesheets="@chat.css">

    <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="500" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0">
        <ListView fx:id="chatListView" VBox.vgrow="ALWAYS" style="-fx-background-color: #F9F9F9; -fx-padding: 10px;"/>
        <HBox spacing="10" style="-fx-padding: 10px;">
            <TextField fx:id="userInputField" HBox.hgrow="ALWAYS" promptText="Tapez votre message..."
                       style="-fx-background-radius: 15px; -fx-padding: 8px; -fx-border-color: #CCC; -fx-border-radius: 15px;"/>
            <Button text="Envoyer" onAction="#handleSendMessage"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 15px; -fx-padding: 8px 15px;"/>
        </HBox>
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.pidevrh.Poste.PosteController">


    <Label layoutX="20" layoutY="20" text="Content:" />
    <TextField fx:id="contentField" layoutX="100" layoutY="20" prefWidth="200" />

    <Label layoutX="20" layoutY="60" text="Salaire:" />
    <TextField fx:id="salaireField" layoutX="100" layoutY="60" prefWidth="200" />

    <Label layoutX="20" layoutY="100" text="Description:" />
    <TextArea fx:id="descriptionArea" layoutX="100" layoutY="100" prefWidth="200" prefHeight="100" />

    <Label layoutX="20" layoutY="220" text="Date Poste:" />
    <DatePicker fx:id="datePostePicker" layoutX="100" layoutY="220" />

    <Label layoutX="20" layoutY="260" text="State:" />
    <TextField fx:id="stateField" layoutX="100" layoutY="260" prefWidth="200" />

    <Button text="Add Poste" onAction="#addPoste" layoutX="100" layoutY="300" />
</AnchorPane>
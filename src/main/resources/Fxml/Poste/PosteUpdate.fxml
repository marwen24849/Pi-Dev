<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.pidevrh.Poste.PosteUpdateController">

    <VBox spacing="10" alignment="CENTER" >
        <Label text="Update Poste"/>

        <GridPane hgap="10" vgap="10">
            <Label text="Content:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="contentField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Salaire:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="salaireField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="State:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="stateComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10">
            <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>

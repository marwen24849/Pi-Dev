<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/javafx"
      xmlns="http://javafx.com/javafx/8"
      fx:controller="esprit.tn.pidevrh.leave.LeaveRequestController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <Label text="Request Leave" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Leave Type -->
        <Label text="Leave Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="congeComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Select Leave Type"/>

        <!-- Start Date -->
        <Label text="Start Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- End Date -->
        <Label text="End Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Justification -->
        <Label text="Justification:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextArea fx:id="justificationField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                  prefRowCount="3" promptText="Provide a reason (optional)"/>
    </GridPane>

    <!-- Submit Button -->
    <Button text="Submit Request" fx:id="submitButton" onAction="#handleSubmit"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
</VBox>
